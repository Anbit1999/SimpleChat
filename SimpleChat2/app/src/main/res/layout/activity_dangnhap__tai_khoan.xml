<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    android:orientation="vertical"
    tools:context=".Trangchu">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"/>

    <TextView
        android:id="@+id/tv_chuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15pt"
        android:background="#191919"
        android:text="Vui lòng nhập số điện thoại hoặc email cùng mật khẩu để đăng nhập"
        android:textAlignment="center"
        android:textSize="8pt"
        android:textColor="#00A0FB"/>

    <EditText
        android:id="@+id/et_dangnhap_taikhoan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10pt"
        android:background="#00A0FB"
        android:hint="Nhập số điện thoại hoặc email"
        android:textColor="#FFFFFF"
        android:textSize="10pt" />

    <EditText
        android:id="@+id/et_matkhau_taikhoan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10pt"
        android:background="#2B2B2B"
        android:hint="Nhập mật khẩu"
        android:textColor="#FFFFFF"
        android:textSize="12pt"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/tv_quenmatkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10pt"
        android:text="Quên mật khẩu"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"
        android:textSize="10pt" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="92dp">

        <Button
            android:id="@+id/btn_dangnhap_taikhoan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10pt"
            android:background="#00A0FB"
            android:text="Đăng nhập"
            android:textColor="#FFFFFF"
            android:textSize="12pt" />

        <ProgressBar
            android:id="@+id/progressbar_dangnhap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_dangnhap_sdt"
        android:text="Đăng nhập bằng số điện thoại"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:textSize="9pt"/>

</LinearLayout>