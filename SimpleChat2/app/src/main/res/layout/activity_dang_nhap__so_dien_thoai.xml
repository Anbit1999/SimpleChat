<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangNhap_SoDienThoai"
    android:orientation="vertical"
    android:background="@color/background_chat">


    <TextView
        android:id="@+id/btn_dangky_email"
        android:layout_width="350dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:layout_marginLeft="15pt"
        android:text="Vui lòng nhập số điện thoại để kiểm tra"
        android:textColor="@color/colorWhite"
        android:textSize="10pt"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10pt">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+84"
            android:textSize="10pt"
            android:textColor="@color/colorWhite"/>

        <EditText
            android:id="@+id/et_nhapsdt"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Nhập số điện thoại"
            android:textSize="10pt"
            android:layout_marginLeft="5pt"
            android:background="#2B2B2B"
            android:textColor="#FFFFFF"
            android:inputType="number"/>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="92dp">

        <Button
            android:id="@+id/btn_dangnhap_sdt_xacnhan"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10pt"
            android:background="#00A0FB"
            android:text="Xác nhận"
            android:textColor="#FFFFFF"
            android:textSize="10pt"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>